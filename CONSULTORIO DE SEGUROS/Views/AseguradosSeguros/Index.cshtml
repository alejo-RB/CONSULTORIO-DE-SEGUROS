@model IEnumerable<CONSULTORIO_DE_SEGUROS.Models.AseguradosSeguros>

@{
    ViewData["Title"] = "Index";
}

<h1>Seguros Asignados</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asegurado.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asegurado.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seguro.NombreSeguro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asegurado.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asegurado.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seguro.NombreSeguro)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" class="btn btn-success btn-sm" asp-route-id="@item.Id"><i class="bi bi-card-checklist"></i></a>
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
